<Window x:Class="GestionEchec.JoueurClub"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GestionEchec"
        mc:Ignorable="d"
        Title="JoueurClub" Height="450" Width="800">
    <Grid>
        <Label Content="Affichage des joueurs par club" HorizontalAlignment="Left" Margin="290,33,0,0" VerticalAlignment="Top" Width="209" FontWeight="Bold" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        <Button x:Name="btnExit" Content="Quitter" HorizontalAlignment="Left" Margin="364,326,0,0" VerticalAlignment="Top" Width="106" Height="41" Click="BtnExit_Click"/>
        <ComboBox x:Name="ComboClub" HorizontalAlignment="Left" Margin="248,174,0,0" VerticalAlignment="Top" Width="120" Height="31" DisplayMemberPath="nomClub" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" SelectionChanged="ComboClub_SelectionChanged"/>
        <ListBox x:Name="listeJoueurParClub" HorizontalAlignment="Left" Height="186" Margin="433,102,0,0" VerticalAlignment="Top" Width="154" Visibility="Hidden"/>
        <Label Content="Veuillez choisir un club :" HorizontalAlignment="Left" Margin="72,174,0,0" VerticalAlignment="Top" Width="142" Height="31"/>
    </Grid>
</Window>
